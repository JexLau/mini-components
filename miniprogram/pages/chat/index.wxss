page {
  padding: 20rpx;
  box-sizing: border-box;
  padding-bottom: env(safe-area-inset-bottom);
}

.mb-20 {
  margin-bottom: 20rpx;
}

.title {
  margin-bottom: 20rpx;
}

.content {
  font-size: 28rpx;
}

.box {
  padding: 20rpx;
  background-color: rgb(255, 165, 0);
}

.select-box {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #e1e1e1;
  padding: 0 30rpx;
  height: 86rpx;
  font-size: 28rpx;
  color: #333;
}

.select-input {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 2;
  padding-left: 240rpx;
  padding-right: 80rpx;
  height: 100%;
  width: auto;
  line-height: 86rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.right-icon {
  flex-shrink: 0;
  width: 16rpx;
  height: 24rpx;
}

.btn {
  width: 100%;
  height: 88rpx;
  margin-top: 40rpx;
  border-radius: 10rpx;
  background: rosybrown;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #fff;
}

.price {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 40rpx;
  text-align: center;
}

.scope-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #666;
  position: absolute;
  bottom: 10px;
  left: 0;
  right: 0;
}

.file-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.image-box {
  position: relative;
  overflow: hidden;
  border-radius: 10rpx;
}

.idcard {
  width: 336rpx;
  height: 190rpx;
  margin-bottom: 12rpx;
}

.shade {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.shade_active {
  background: rgba(0, 0, 0, 0.4);
}

.camera-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 75rpx;
  height: 75rpx;
  margin-left: -32rpx;
  margin-top: -32rpx;
}

.textarea {
  width: 100%;
  border: 1px solid gray;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.text-content {
  line-height: 1.5;
}

.rich {
  margin-top: 30rpx;
  border-radius: 10rpx;
  background-color: #e1e1e1;
  padding: 10rpx 10rpx;
}

.tap {
  display: inline-flex;
  font-size: 24rpx;
  margin: 10rpx;
  background-color: #e1e1e1;
  padding: 3rpx 5rpx;
  border-radius: 4rpx;
}

.more {
  background-color: aquamarine;
}

.adContainer {
  margin-top:40rpx;
  width: 100%;
}